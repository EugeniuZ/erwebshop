<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
    <schema>webshop</schema>
    <access>FIELD</access>
    <!--Ignore annotations in source file (metadata-complete=true)-->
    <entity class="ershop.entity.inventory.Promotion" metadata-complete="true">
        <table name="Promotions"/>

        <attributes>
            <id name="id">
                <column name="ID"/>
            </id>
            <basic name="quantityMin">
                <column name="QtyMin"/>
            </basic>
            <basic name="discount">
                <column name="Discount"/>
            </basic>
            <many-to-one name="product">
                <join-column name="Product_IDREF" referenced-column-name="ID"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>